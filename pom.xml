<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.epam.jdi</groupId>
    <version>2.0.21</version>
    <artifactId>jdi-2</artifactId>
    <name>JDI UI 2.0</name>
    <packaging>pom</packaging>

    <properties>
        <surefire.version>2.20</surefire.version>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <java.version>1.8</java.version>
        <allure.maven.version>2.6</allure.maven.version>
        <aspectj.version>1.9.1</aspectj.version>
        <aspectj.maven>1.11</aspectj.maven>

    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
           <!--     <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>-->
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>jdi-light</module>
        <module>jdi-light-examples</module>
        <module>jdi-light-html-tests</module>
        <module>jdi-light-template</module>
        <module>jdi-light-html</module>
    </modules>

</project>